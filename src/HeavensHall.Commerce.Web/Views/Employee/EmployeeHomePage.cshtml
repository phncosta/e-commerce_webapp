@using HeavensHall.Commerce.Domain.Enums; 

<div class="container page-container">
    <div class="page-wrapper default-theme sidebar-bg bg1 toggled">

        @await Html.PartialAsync("Employee/_SidebarMenu")

        <h4 class="text-center p-3">Bem-vindo, @User.Identity.Name</h4>

        <div class="row">
            <div class="col-3">
                <!-- Tab navs -->
                <div class="nav flex-column nav-tabs text-center"
                     id="v-tabs-tab"
                     role="tablist"
                     aria-orientation="vertical">
                    <a class="nav-link active"
                       id="v-tabs-home-tab"
                       data-mdb-toggle="tab"
                       href="#v-tabs-home"
                       role="tab"
                       aria-controls="v-tabs-home"
                       aria-selected="true">Usuários</a>
                    <a class="nav-link"
                       id="v-tabs-profile-tab"
                       data-mdb-toggle="tab"
                       href="#v-tabs-profile"
                       role="tab"
                       aria-controls="v-tabs-profile"
                       aria-selected="false">Produtos</a>
                    <a class="nav-link"
                       id="v-tabs-messages-tab"
                       data-mdb-toggle="tab"
                       href="#v-tabs-messages"
                       role="tab"
                       aria-controls="v-tabs-messages"
                       aria-selected="false">Estoque</a>
                </div>
                <!-- Tab navs -->
            </div>

            <div class="col-9">
                <!-- Tab content -->
                <div class="tab-content" id="v-tabs-tabContent">
                    <div class="tab-pane fade show active"
                         id="v-tabs-home"
                         role="tabpanel"
                         aria-labelledby="v-tabs-home-tab">

                        <div class="list-group">
                            <a href="usuarios" class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Gerenciar usuários</h6>
                                </div>
                                <p class="mb-1">Visualizar lista de usuários, desativar ou ativar a conta ou atualizar os dados.</p>
                            </a>

                            @if (User.IsInRole(UserRole.Admin.ToString()))
                            {
                                <a href="conta/novo-funcionario" class="list-group-item list-group-item-action flex-column align-items-start active">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Novo usuário</h6>
                                    </div>
                                    <p class="mb-1">Criar uma nova conta de funcionário administrador ou estoquista.</p>
                                </a>
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade"
                         id="v-tabs-profile"
                         role="tabpanel"
                         aria-labelledby="v-tabs-profile-tab">

                        <div class="list-group">
                            <a href="produtos/visualizar" class="list-group-item list-group-item-action flex-column align-items-start active">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Gerenciar produtos</h6>
                                </div>
                                <p class="mb-1">Visualizar lista de produtos, ativar ou desativar produto e atualizar os dados do produto.</p>
                            </a>
                            <a href="produtos/cadastrar" class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Novo produto</h6>
                                </div>
                                <p class="mb-1">Adicionar um novo produto à loja.</p>
                            </a>
                        </div>
                    </div>

                    <div class="tab-pane fade"
                         id="v-tabs-messages"
                         role="tabpanel"
                         aria-labelledby="v-tabs-messages-tab">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">A definir</h6>
                                </div>
                                @*<p class="mb-1">Descrição.</p>*@
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Tab content -->
            </div>
        </div>
    </div>
</div>

<style>
    .tab-content ul > li > a {
        font-size: medium;
        text-decoration: none;
        font-weight: bold;
    }
</style>
